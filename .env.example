# Copy this file to .env and update with your values
# For Railway deployment, add these as environment variables in the Railway dashboard

# Flask secret key - generate a random string
SECRET_KEY=your-secret-key-here

# Admin backup key for emergency access
ADMIN_BACKUP_KEY=your-admin-key-here

# Debug mode - set to False in production
DEBUG=False

# Database URL - for local development only
# Railway will automatically provide this in production
DATABASE_URL=sqlite:///calorie_tracker.db

# Sync token for profile backups
SYNC_TOKEN=your-sync-token-here

# Port (Railway will set this automatically in production)
# PORT=5000